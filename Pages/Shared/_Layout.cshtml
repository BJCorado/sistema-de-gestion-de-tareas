@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Tareas</title>

    <!-- Agregar Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Agregar tu CSS personalizado -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />

    <style>
        /* Ajustar todo el contenido para ocupar toda la pantalla */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* Header fijo en la parte superior */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #007bff; /* Azul Bootstrap */
            color: white;
            text-align: center;
            padding: 1rem 0;
            z-index: 1000;
        }

        /* Agregar margen superior al contenido para evitar que quede debajo del header */
        .content {
            flex: 1;
            margin-top: 100px; /* Ajustar según la altura del header */
            padding: 20px;
            padding-bottom: 80px; /* Ajuste para evitar que el footer tape el contenido */
        }

        /* Footer pegado abajo y más estrecho */
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #343a40; /* Gris oscuro Bootstrap */
            color: white;
            text-align: center;
            padding: 1rem 0;
            z-index: 1000;
        }

            /* Hacer que el texto del footer esté centrado y con un ancho limitado */
            footer p {
                margin: 0;
                padding: 0;
            }

        /* Contenedor centrado y con un ancho limitado */
        .footer-container {
            width: 100%;
            max-width: 900px; /* Establecer el máximo ancho del footer */
            margin: 0 auto; /* Centrar el contenido */
            text-align: center;
        }

        /* Añadir espacio adicional entre los campos de formulario */
        .form-group {
            margin-bottom: 20px; /* Ajuste para separar los campos */
        }
    </style>
</head>
<body>
    <header>
        <h1>Gestor de Tareas</h1>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    <footer>
        <div class="footer-container">
            <p>© 2025 Grupo No.3</p>
        </div>
    </footer>

    <!-- Agregar Bootstrap JS (Opcional, solo si usas componentes interactivos como modales o dropdowns) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>




