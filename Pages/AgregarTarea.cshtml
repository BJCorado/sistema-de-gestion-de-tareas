@page "/AgregarTarea"
@model gestion_de_tareas.Pages.AgregarTareaModel
@{
    ViewData["Title"] = "Agregar Tarea";
}

<h2>Agregar Tarea</h2>

<form method="post">
    <div class="form-group" style="margin-bottom: 15px;">
        <label for="Titulo">Título</label>
        <input type="text" id="Titulo" class="form-control" asp-for="NuevaTarea.Titulo" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="Descripcion">Descripción</label>
        <input type="text" id="Descripcion" class="form-control" asp-for="NuevaTarea.Descripcion" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="Fecha">Fecha</label>
        <input type="date" id="Fecha" class="form-control" asp-for="NuevaTarea.Fecha" />
    </div>

    <div class="form-group" style="margin-bottom: 15px;">
        <label for="HoraInicio">Hora de inicio</label>
        <input type="time" id="HoraInicio" class="form-control" asp-for="NuevaTarea.HoraInicio" />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Tarea</button>
</form>

